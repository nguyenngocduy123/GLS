<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="mapservice" level="TRACE"/>
  <logger name="jvrp" level="INFO"/>
  <logger name="io" level="TRACE"/>
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>